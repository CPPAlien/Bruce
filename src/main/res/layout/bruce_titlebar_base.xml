<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="?attr/bruceTitleColor"
    android:id="@+id/titlebar_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/titlebar_left_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="20dp"
        android:paddingStart="20dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="120dp"
        android:layout_marginEnd="120dp"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:drawablePadding="5dp"
        android:singleLine="true"
        android:drawableLeft="@drawable/arrow_back_white"
        android:drawableStart="@drawable/arrow_back_white"
        android:text="" />
    <TextView
        android:id="@+id/titlebar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="20dp"
        android:paddingEnd="20dp"/>
    <TextView
        android:id="@+id/titlebar_center_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:textSize="18sp"
        android:textColor="@color/white"/>
</RelativeLayout>